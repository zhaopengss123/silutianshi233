.banner{
  width: 100%;
  overflow: hidden;
}
image{
  width: 100%;
  display: block;
}
.push{
  width:100%;
  height: 37rpx;
  line-height: 37rpx;
  background: url('http://ylbb-business.oss-cn-beijing.aliyuncs.com/lb4151231s.png')no-repeat 15rpx 0 #d0751d;
  background-size:35rpx 35rpx; 
  font-size: 22rpx;
  color: #fff;
  text-indent: 60rpx;
}
.nav{
  width: 713rpx;
  margin: 0 auto;
  margin-top: 30rpx;
}
.nav view{
  width: 341rpx;
  display: inline-block;
  overflow: hidden;
  margin-bottom: 44rpx;
}
.nav view:nth-child(odd){
  margin-right: 31rpx;
}
.opensetting{
  width:100%;
  height:100%;
  position: fixed;
  top: 0;
  left: 0;
  background: rgba(0, 0, 0, 0.7);
}
.opensetting view{
  width: 690rpx;
  height: 300rpx;
  margin: 0 auto;
  margin-top: 300rpx;
  background: #fff;
  overflow: hidden;
}
.opensetting button{
  margin-top: 50rpx;
  display: block;
  width: 300rpx;
  background: #d0751d;
  color: #fff;
  font-size: 32rpx;
}
.opensetting text{
  display: block;
  font-size: 30rpx;
  text-align: center;
  padding-top: 80rpx;
}
.nav view{
  overflow: hidden;
  position: relative;
  height: 240rpx;
}
.nav text{
  display: block;
  width: 100%;
  height: 240rpx;
  line-height: 240rpx;  
  text-align: center;
  color: #fff;
  position: absolute;
  top: 0;
  left: 0;
  background: rgba(0, 0, 0, .6)
}
