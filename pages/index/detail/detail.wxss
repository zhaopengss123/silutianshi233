.content{
  width: 100%;
  overflow: hidden;
}
.banner{
  width: 100%;
  overflow: hidden;
}
image{
  width: 100%;
  display: block;
}
.push{
  width:100%;
  height: 37rpx;
  line-height: 37rpx;
  background: url('http://ylbb-business.oss-cn-beijing.aliyuncs.com/lb4151231s.png')no-repeat 15rpx 0 #d0751d;
  background-size:35rpx 35rpx; 
  font-size: 22rpx;
  color: #fff;
  text-indent: 60rpx;
}
.detail_main{
  margin-top: 30rpx;
}
.list{
  width: 338rpx;
  box-shadow: 0px 0px 5rpx #cbcbcb;
  border-radius: 10rpx;
  overflow: hidden;
  font-size: 20rpx;
  margin-left: 20rpx;
  margin-top: 20rpx;
  float: left;
  color: rgba(0, 0, 0, .8);
  margin-bottom: 20rpx;

}
.list:nth-child(even){
  margin-left: 39rpx;
}
.list image{
  width: 338rpx;
  height: 170rpx;
}
.list_font{
  line-height: 40rpx;
  overflow: hidden;
}
.list_font view:nth-child(1) text{
  display: block;
  width: 159rpx;
  float: left;
  margin-left: 5rpx;
 
}
.list_font view:nth-child(1) text:nth-child(2){
  text-align: right;
  margin-left: 0;
  margin-right: 5px;
}
.pf{
  font-size: 18rpx;
}
.pf text{
  width: 33%;
  float: left;
  text-align: center;
}
.list_footer{
  font-size: 26rpx;
  color: rgba(0, 0, 0, .8);
  text-align: center;
  height: 100rpx;
  line-height: 100rpx;
}
.imgh{
  width: 750rpx;
  height:184rpx;
  display: block;
  overflow: hidden;
  padding-top: 20rpx;
}
.imgh image{
  width: 750rpx;
  height: 184rpx;
}